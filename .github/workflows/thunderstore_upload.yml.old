name: Publish Mod

# Run when a new release is... released
on: 
  release:
    types: [published]
#   push:
#     branches:
#       - master
  pull_request:
    branches:
      - master
#   workflow_dispatch:

jobs:
  publish:
    runs-on: ubuntu-latest
    steps:
      # Use checkout to publish the files in your repo
      - uses: actions/checkout@v3
      - uses: GreenTF/upload-thunderstore-package@v2.2
        with:
          namespace: Atopy # the thunderstore 'team' to publish under
          description: Ping what you see, add quick pins to map !
          token: ${{ secrets.DEV_THUNDERSTORE_TOKEN }}
          name: QuickPing # the name of the package
          version: ${{ github.ref_name }} # Use the tag as the package version
          community: Valheim
          categories: "tools tweaks mods"
          dev: true
          path: ./QuickPing/Package
